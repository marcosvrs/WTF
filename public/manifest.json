{
  "manifest_version": 3,
  "name": "WhatsApp Toolbox Features",
  "version": "3.1.2",
  "action": {
    "default_icon": {
      "16": "icons/wtf16.png",
      "32": "icons/wtf32.png",
      "48": "icons/wtf48.png",
      "64": "icons/wtf64.png",
      "128": "icons/wtf128.png"
    },
    "default_popup": "popup.html",
    "default_title": "WTF"
  },
  "description": "Chrome Extension that allows you to send WhatsApp messages in bulk",
  "icons": {
    "16": "icons/wtf16.png",
    "32": "icons/wtf32.png",
    "48": "icons/wtf48.png",
    "64": "icons/wtf64.png",
    "128": "icons/wtf128.png"
  },
  "author": "wtf@marcosvr.com",
  "content_scripts": [
    {
      "js": [
        "js/content_script.js"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "externally_connectable": {
    "matches": ["https://web.whatsapp.com/*"]
  },
  "homepage_url": "https://github.com/marcosvrs/wtf",
  "options_ui": {
    "open_in_tab": false,
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "scripting",
    "storage"
  ],
  "short_name": "WTF",
  "storage": {
    "managed_schema": "schema.json"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "resources": [
        "js/wa-js.js"
      ]
    }
  ]
}